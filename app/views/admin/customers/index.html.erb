<div class="container-fluid">
  <div class="row my-4 d-flex justify-content-center">
    <h3>会員一覧</h3>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>会員ＩＤ</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr class="table-light">
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), style: "color: black" do %>
                <%= customer.name %>
              <% end %>
              </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active? %>
                <p class="font-weight-bolder text-success">
                  <%= '有効' %>
                </p>
             <% else %>
                <p class="font-weight-bolder text-muted">
                  <%= '退会' %>
                </p>
             <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-2"></div>
  </div>
</div>
