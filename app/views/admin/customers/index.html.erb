<div class="container-fluid">
  <div class="row my-4 d-flex justify-content-center">
    <h3>会員一覧</h3>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>会員ＩＤ</th>
            <th>画像</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>猫の名前</th>
            <th>性別</th>
            <th>自己紹介</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.order(created_at: 'desc').each do |customer| %>
        <tbody>
          <tr class="table-light">
            <td><%= customer.id %></td>
            <td>
              <% if customer.image.present? %>
                <%= image_tag customer.image, size: "30x30" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer.id), style: "color: black" do %>
                <%= customer.name %>
              <% end %>
              </td>
            <td><%= customer.email %></td>
            <td><%= customer.cat_name %></td>
            <td><%= customer.cat_gender %></td>
            <td><%= truncate(customer.introduction, length: 8) %></td>
            <td>
              <% if customer.is_active? %>
                <p class="font-weight-bolder text-success">
                  <%= '有効' %>
                </p>
             <% else %>
                <p class="font-weight-bolder text-muted">
                  <%= '退会' %>
                </p>
             <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= render "public/shared/page", obj: @customers %>
    </div>
    <div class="col-2"></div>
  </div>
</div>
