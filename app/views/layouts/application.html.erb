<!DOCTYPE html>
<html>
  <head>
    <title>Nekoken</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">
    <link href="https://fonts.googleapis.com/earlyaccess/nikukyu.css" rel="stylesheet">
  </head>

  <body>
     <header>
       <div class="container-fluid">
         <div class="row">
           <div class="col-3 pl-5">
             <nav class="navbar navbar-light">
              <a class="navbar-brand wf-nikukyu" href="#" style="font-size: 50px;">
                 <img src="/docs/4.6/assets/brand/bootstrap-solid.svg" width="100" height="100" class="d-inline-block align-top" alt="">
                 ネコケン
              </a>
             </nav>
           </div>
           <div class="col-2"></div>
           <div class="col-5">
             <div class="row">
               <div class="wf-roundedmplus1c">
                 猫の健康管理
               </div>
               </div>
                <nav class="navbar navbar-expand-lg navbar-light">
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                      <% if admin_signed_in? %>
                        <li>
                          <%= link_to "会員一覧",customers_path, class: "mx-3" %>
                        </li>
                        <li>
                          <%= link_to "投稿一覧",topics_path, class: "mx-3" %>
                        </li>
                        <li>
                          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "mx-3" %>
                        </li>
                      <% elsif customer_signed_in? %>
                        <li>
                           <%= link_to "マイページ", mypage_path, class: "mx-3" %>
                        </li>
                        <li>
                           <%= link_to '会員一覧',customers_path, class: "mx-3"  %>
                        </li>
                        <li>
                           <%= link_to "投稿一覧",topics_path, class: "mx-3" %>
                        </li>
                        <li>
                           <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "mx-3" %>
                        </li>
                      <% else %>
                        <li>
                           <%= link_to 'About', homes_about_path, class: "mx-3" %>
                        </li>
                        <li>
                           <%= link_to "ゲストログイン", customers_guest_sign_in_path, class: "mx-3" %>
                        </li>
                        <li>
                           <%= link_to '新規登録', new_customer_registration_path, class: "mx-3" %>
                        </li>
                        <li>
                           <%= link_to "ログイン", new_customer_session_path, class: "mx-3" %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </nav>
           </div>
           <div class="col-2"></div>
         </div>
       </div>
     </header>
    <%= yield %>
  </body>
</html>
