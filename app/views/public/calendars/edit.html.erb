<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-3"></div>
    <div class="col-6 calendar-edit">
      <%= render "public/shared/errors", obj: @event %>
      <%= form_with model: @event, method: :patch do |f| %>
      <h3><カレンダー編集></h3>
      <div class="row">
        <h4>タイトル</h4>
        <%= f.text_field :title %>
      </div>
      <div class="row my-3">
        <%= f.datetime_select :start_time %>
      </div>
      <div class="row">
        <h4>内容</h4>
        <%= f.text_field :content %>
        <%= f.submit '変更', style: "width: 100px; margin-left: 30px;" %>
      </div>
    </div>
    <% end %>
    <div class="col-3"></div>
  </div>
</div>

