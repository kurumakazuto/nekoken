<table class="table">
  <% if @range == "タイトル" %>
    <thead>
      <tr>
        <th>名前</th>
        <th>タイトル</th>
        <th>本文</th>
      </tr>
    </thead>
    <tbody>
    <h2>検索結果</h2>
    <% @topics_title.each do |topic| %>
      <tr>
        <td>
          <%= link_to customer_path(topic.customer.id) do %>
            <%= topic.customer.name %>
          <% end %>
        </td>
        <td><%= topic.title %></td>
        <td><%= topic.introduction %></td>
        </tr>
      <% end %>
    <% if @topics_title.count == 0 %>
      <h4>検索に一致するものはありませんでした</h4>
    <% end %>
    </tbody>
  <% else %>
    <thead>
      <tr>
        <th>名前</th>
        <th>タイトル</th>
        <th>本文</th>
      </tr>
    </thead>
    <tbody>
    <h2>検索結果</h2>
    <% @topics_introduction.each do |topic| %>
      <tr>
        <td>
          <%= link_to customer_path(topic.customer.id) do %>
            <%= topic.customer.name %>
          <% end %>
        </td>
        <td><%= topic.title %></td>
        <td><%= topic.introduction %></td>
        </tr>
    <% end %>
    <% if @topics_introduction.count == 0 %>
      <h4>検索に一致するものはありませんでした</h4>
    <% end %>
    </tbody>
  <% end %>
</table>
