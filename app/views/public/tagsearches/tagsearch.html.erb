<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>画像</th>
    </tr>
  </thead>
  <tbody>
  <h2><%= @word %>のタグ検索結果</h2>
  <% @topics.each do |topic| %>
    <tr>
      <td>
        <%= link_to customer_path(topic.customer.id) do %>
          <%= topic.customer.name %>
        <% end %>
      </td>
      <td><%= topic.title %></td>
      <td><%= topic.introduction %></td>
      <td>
         <% if topic.image.present? %>
           <%= image_tag topic.image, size: "30x30" %>
         <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>