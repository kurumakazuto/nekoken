<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-1"></div>
    <div class="col-10">
       <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>タイトル</th>
            <th>本文</th>
          </tr>
        </thead>
        <% @topics. each do |topic| %>
        <tbdoy>
          <tr class="table-light">
            <td><%= topic.title %></td>
            <td>
              <%= link_to topic_path(topic.id), style: "color: black" do %>
                <%= truncate(topic.introduction, length: 25) %>
              <% end %>
            </td>
          </tr>
        </tbdoy>
        <% end %>
      </table>
    </div>
    <div class="col-1"></div>
  </div>
</div>