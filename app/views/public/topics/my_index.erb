<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-1"></div>
    <div class="col-10">
       <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>タイトル</th>
            <th>本文</th>
            <th>画像</th>
            <th></th>
            <th></th>
            <th>#タグ</th>
            <th></th>
          </tr>
        </thead>
        <% @topics. each do |topic| %>
        <tbody>
          <tr class="table-light">
            <td><%= topic.title %></td>
            <td>
              <%= link_to topic_path(topic.id), style: "color: black" do %>
                <%= truncate(topic.introduction, length: 25) %>
              <% end %>
            </td>
            <td>
              <% if topic.image.present? %>
                <%= image_tag topic.image, size: "30x30" %>
              <% end %>
            </td>
            <td><%= render "public/favorites/btn", topic: topic %></td>
            <td>コメント</td>
            <td>
              <% if topic.category.present? %>
                <%= link_to topic.category,tagsearches_search_path(content: topic.category) %>
              <% end %>
            </td>
            <td><%= link_to '削除', topic_path(topic.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-1"></div>
  </div>
</div>